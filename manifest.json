{
    "manifest_version": 2,
    "name": "TwitterCRM",
    "description": "Automatically opens Twitter profiles and follows them",
    "version": "1.0",
  
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*"
    ],

    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  